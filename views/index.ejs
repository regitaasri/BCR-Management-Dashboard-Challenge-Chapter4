<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Logo Title -->
        <link rel="icon" href="assets\img\logo.svg" type="image/x-icon">
        <title>BCR-Management Dashboard</title>

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

        <!-- My Style -->
        <link rel="stylesheet" href="assets/css/style.css">

    </head>
    <body>
      <!-- Navbar -->
      <nav>
        <div class="left-nav">
          <span class="logo-nav"></span>
        </div>
        <div class="right-nav">
          <img src="assets\img\fi_menu.png" alt="">
          <div>
            <div class="search">
              <img src="assets\img\fi_search.png" alt="">
              <form class="d-flex"> 
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-primary text-bold" type="submit">Search</button>
              </form>
            </div>
            <button class="user">
              <img src="assets\img\group_u.png" alt="">
              <span>Unis Badri</span>
              <img src="assets\img\fi_chevron-down.png" alt="">
            </button>
          </div>
        </div>
      </nav>
      
      <!-- Sidebar -->
      <div class="sidebar">
        <span class="logo-sidebar"></span>
        <ul>
          <li>
            <img src="assets\img\fi_home.png" alt="">
            <span>Dashboard</span>
          </li>
          <li>
            <img src="assets\img\fi_truck.png" alt="">
            <span>Cars</span>
          </li>
        </ul>
      </div>
      
      <!-- Side Menu -->
      <div class="side-menu">
        <div>
          <p class=text-bold>CARS</p>
        </div>
        <ul>
          <li><a href="index.html">List Car</a></li>
        </ul>
      </div>
      
      <!-- List cars -->
      <main>
        <header>
          <ul class="nav-path">
            <li>Cars</li>
            <li>
              <img src="assets\img\Vector.png" alt="">
              <a href="#">List Car</a>
            </li>
          </ul>
          <div class="cars-list">
            <h1>List Car</h1>
            <a href="add.html">
              <img src="assets\img\fi_plus.png" alt="">
              <span>Add New Car</span>
            </a>
          </div>
          <div class="list">
            <div class="active">
              <button type="button" class="btn btn-outline-primary text-bold">All</button>
            </div>
            <div>
              <button type="button" class="btn btn-outline-primary text-bold">Small</button>
            </div>
            <div>
              <button type="button" class="btn btn-outline-primary text-bold">Medium</button>
            </div>
            <div>
              <button type="button" class="btn btn-outline-primary text-bold">Large</button>
            </div>
          </div>
          <!-- Cars card -->
          <div class="cars row row-cols-1 row-cols-md-3 g-4">
            <% cars.forEach ((car) => { %>
            <div class="col">
              <div class="card h-100">
                <img src="assets\img\image.png" class="card-img-top" alt="...">
                <div class="card-body">
                  <p class="card-title">Nama/Tipe Mobil</p>
                  <p class="card-title text-bold">Rp 430.000 / hari</p>
                  <p class="card-text">Updated at 4 Apr 2022, 09.00</p>
                </div>
                <div>
                  <a href=""><button type="button" class="btn btn-outline-danger">Hapus</button></a>
                  <a href="edit.html"><button type="button" class="btn btn-success">Edit</button></a>
                </div>
              </div>
            </div>
        </header>
      </main>
      <% }) %>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>